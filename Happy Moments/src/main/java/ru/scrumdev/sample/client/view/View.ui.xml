<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:HorizontalPanel>
        <g:FlowPanel ui:field="leftPanel">
            <g:FlowPanel ui:field="searchPanel">
                <g:Label text="Search panel"/>
            </g:FlowPanel>
            <g:FlowPanel ui:field="mapPanel">
                <g:Label text="Map panel"/>
                <g:Button ui:field="updateButton" text="Update data"/>
            </g:FlowPanel>
        </g:FlowPanel>

        <g:FlowPanel ui:field="rightPanel">
            <g:FlowPanel ui:field="imagePanel">
                <g:Label text="Image panel"/>
            </g:FlowPanel>
            <g:FlowPanel ui:field="infoPanel">
                <g:Label ui:field="eventName" text="Name"/>
                <g:Label ui:field="name"/>
                <g:Label ui:field="eventDescription" text="Description"/>
                <g:Label ui:field="description"/>
                <g:Label ui:field="eventTime" text="Time"/>
                <g:Label ui:field="time"/>
                <g:Label ui:field="eventDate" text="Date"/>
                <g:Label ui:field="date"/>
            </g:FlowPanel>
        </g:FlowPanel>

    </g:HorizontalPanel>
</ui:UiBinder>