<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:HorizontalPanel>
        <g:FlowPanel ui:field="leftPanel">
            <g:FlowPanel ui:field="leftInnerPanel1">
                <g:Label text="Left Inner Panel 1"/>
            </g:FlowPanel>
            <g:FlowPanel ui:field="leftInnerPanel2">
                <g:Label text="Left Inner Panel 2"/>
            </g:FlowPanel>
        </g:FlowPanel>

        <g:FlowPanel ui:field="rightPanel">
            <g:FlowPanel ui:field="rightInnerPanel1">
                <g:Label text="Right Inner Panel 1"/>
            </g:FlowPanel>
            <g:FlowPanel ui:field="rightInnerPanel2">
                <g:Label ui:field="name" text="name"/>
                <g:Label ui:field="description" text="description"/>
                <g:Label ui:field="time" text="time"/>
                <g:Label ui:field="date" text="date"/>
            </g:FlowPanel>
        </g:FlowPanel>

    </g:HorizontalPanel>
</ui:UiBinder>